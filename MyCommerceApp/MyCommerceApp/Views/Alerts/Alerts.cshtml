@model PagedList.IPagedList<MyCommerceApp.Models.Alerts>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "AlertsView";
}

<h2 style="margin-top:5%">My Alerts</h2>

<div class="row">
    <div class="col-md-10">
        <table class="table table-striped table-bordered table-sm" id="transactionTable" cellspacing="0">
            <thead>
                <tr>
                    <th class="th-md" style="text-align: center">Alert</th>
                    <th class="th-md" style="text-align: center">Description</th>
                    <th class="th-md" style="text-align: center">Amount</th>
                    <th class="th-md" style="text-align: center">City</th>
                    <th class="th-md" style="text-align: center">State</th>
                    <th class="th-md" style="text-align: center">Zip</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alert)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Zip)
                    </td>

                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                </tr>
            </tfoot>
        </table>

    </div>
</div>