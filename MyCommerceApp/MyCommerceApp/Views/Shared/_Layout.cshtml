<!DOCTYPE html>
<style>
    .navbar-brand {
        color: white !important;
        font-size: 30px !important;
    }

    #headerDropdown-toggle {
        color: white !important;
        font-size: 20px;
    }

    .navbar-nav .open {
        color: white !important;
    }

    #headerDropdown a {
        color: white !important;
        background-color: green !important;
    }

    #headerDropdown-menu {
        background-color: green !important;
    }
</style>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Commerce Bank</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="background-color:green !important;"class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="padding-top:1%;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <div display:block">
                    <img style="width:80px;height:75px;padding:4%; margin-top:-20px; margin-left:-325px;" class="logo" src="~/Content/images/CBBLogo.jpg" />
                    @Html.ActionLink("Commerce Bank", "Index", "Home", new { area = "", Style = "color:White" }, new { @class = "navbar-brand" })
                </div>
            </div>
            <div class="navbar-collapse collapse" style="margin-left: 160px;">
                <ul class="nav navbar-nav">
                    <li class="dropdown" id="headerDropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="headerDropdown-toggle">Accounts <b class="caret"></b></a>
                        <ul class="dropdown-menu" id="headerDropdown-menue">
                            <li>
                            <li>@Html.ActionLink("Account Summary", "Summary", "Account")</li>
                            <li>@Html.ActionLink("Activity", "Activity", "Account")</li>
                        </ul>
                    </li>
                    <li class="dropdown" id="headerDropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="headerDropdown-toggle">Alerts <b class="caret"></b></a>
                        <ul class="dropdown-menu" id="headerDropdown-menue">
                            <li>
                            <li>@Html.ActionLink("Alerts Summary", "Alerts", "Alerts")</li>
                            <li>@Html.ActionLink("Manage Alerts", "ManageAlerts", "Alerts")</li>
                        </ul>
                    </li>
                    <li style="color:white; font-size:33px; margin-top:-3px;">
                        |
                    </li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="container" style="position: fixed; bottom: 0">
            <footer>
                <p>&copy; @DateTime.Now.Year - Commerce Bank</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
